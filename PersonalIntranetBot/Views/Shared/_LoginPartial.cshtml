*  Description: This partial view renders the sign in and sign out menu items.
*
-->
@if (User.Identity.IsAuthenticated)
{
    var username = User.Identity.Name ?? User.FindFirst("preferred_username").Value;

    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">@username</li>
        <li><a asp-area="" asp-controller="Settings" asp-action="Index"><i class="glyphicon glyphicon-cog"></i></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Signin">Sign in</a></li>
    </ul>
}
