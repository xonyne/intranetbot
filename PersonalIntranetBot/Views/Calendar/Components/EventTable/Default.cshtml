@model List<PersonalIntranetBot.Models.OutlookEventsViewModel>;
<table style="border: 1px solid green;">
    <tr>
        <th style="border: 1px solid green; padding: 5px;">Content</th>
        <th style="border: 1px solid green; padding: 5px;">Directions</th>
        <th style="border: 1px solid green; padding: 5px;">Time</th>
        <th style="border: 1px solid green; padding: 5px;">People</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="border: 1px solid green;">
            <td style="border: 1px solid green; padding: 5px;">
                <button type="button" class="descButton btn btn-default" meeting-description="@Html.DisplayFor(modelItem => item.Description)"><span class="glyphicon glyphicon-file" style="vertical-align:middle;margin-top: -5px"></span>  @Html.DisplayFor(modelItem => item.Subject)</button>
            </td>
            <td style="border: 1px solid green;padding: 5px;">
                <div class="infoBox btn btn-default"><span class="glyphicon glyphicon-map-marker" style="vertical-align:middle;margin-top: -5px"></span> @Html.DisplayFor(modelItem => item.Location)<br /><a href="@Html.DisplayFor(modelItem => item.GoogleMapsURL)" target="_blank">Get directions...</a></div>
            </td>
            <td style="border: 1px solid green;padding: 5px;">
                <div class="infoBox"> 
                    <span class="glyphicon glyphicon-time" style="vertical-align:middle;margin-top: -5px"></span> @Html.DisplayFor(modelItem => item.Start)<br />
                    <span class="glyphicon glyphicon-time" style="vertical-align:middle;margin-top: -5px"></span> @Html.DisplayFor(modelItem => item.End)<br />
                </div>
            </td>
            <td style="border: 1px solid green;padding: 5px;">
                @foreach (var linkedInItem in item.LinkedIdProfileURLs)
                {
                    @if (linkedInItem.Value == "")
                    {
                        <span class="btn btn-default disabled">No profile found for: @Html.DisplayFor(modelItem => linkedInItem.Key)</span><br />
                    }
                    else
                    {
                        <a class="btn btn-default" style="margin-top:10px; margin-bottom:10px;" href="@Html.DisplayFor(modelItem => linkedInItem.Value)" target="_blank"><span class="glyphicon glyphicon-user" style="vertical-align:middle;margin-top: -5px"></span>  @Html.DisplayFor(modelItem => linkedInItem.Key)</a>
                    }
                }
            </td>
        </tr>
    }
</table>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Meeting information</h4>
            </div>
            <div class="modal-body">
                <span id="content"></span>
            </div>
            <div class="modal-footer">
                <button type="button" id="hideModal" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
<script type="text/javascript">

            $("button[type='button']").click(function () {
                $("#myModal").find("#content").html($(this).attr("meeting-description"));
                });

                    $(".descButton").click(function () {
            $("#myModal").modal("show");
        });

                    $("#hideModal").click(function () {
            $("#myModal").modal("hide");
        });</script>
}